# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Old route
GET     /old                        controllers.Old.index(page: Int ?= 0, by: Int ?= 3)
POST    /old                        controllers.Old.create

# Newer
GET     /news                       controllers.News.index(by: Int ?= 3)
GET     /news/searchOlder           controllers.News.searchReverse(upTo: String, by: Int ?= 3, include: Boolean ?= true)
GET     /news/searchNewer           controllers.News.searchForward(since: String, by: Int ?= 3, include: Boolean ?= true)

GET     /products                   controllers.Products.index
GET     /products/search            controllers.Products.search


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
